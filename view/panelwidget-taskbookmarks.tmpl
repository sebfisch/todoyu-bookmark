<div id="{$id}-list" class="bookmarks">
	{if $bookmarks}
		<ul class="contextmenutaskbookmarks ulListDotted withMouseHover sortable">
		{foreach $bookmarks taskBookmark}
			<li id="{$id}-task-{$taskBookmark.id}" class="{cycle values="odd,even"} listItem sortable bcStatus{$taskBookmark.status} {if $taskBookmark.isRunning}running{/if}" title="{if taskBookmark.type === constant('TASK_TYPE_TASK')}{Label task.task}{else}{Label task.type.container}{/if} {$taskBookmark.id_project}.{$taskBookmark.tasknumber} - {$taskBookmark.title}">
				{if $taskBookmark.isTrackable || $taskBookmark.isRunning}
					<a id="{$id}-task-{$taskBookmark.id}-btn" class="icon timetracking {$taskBookmark.btnClass}" href="javascript:void(0)" onclick="Todoyu.Ext.bookmark.PanelWidget.TaskBookmarks.{$taskBookmark.jsFunction}({$taskBookmark.id})" title="{if $task.id == $current}{Label timetracking.stop}{else}{Label timetracking.start}{/if}"><!-- button --></a>
				{/if}
				<span class="info">
					<div class="handle" id="bookmark-{$taskBookmark.id}-handle"></div>
					<div class="bcStatus{if $taskBookmark.type == constant('TASK_TYPE_TASK')}{$taskBookmark.status}{else}0{/if} taskItem">

						<div class="title" onclick="Todoyu.Ext.project.goToTaskInProject({$taskBookmark.id}, {$taskBookmark.id_project})">
							{$taskBookmark.id_project}.{$taskBookmark.tasknumber} -
							{if empty($taskBookmark.label)}
								{$taskBookmark.title|truncate:43}
							{else}
								{$taskBookmark.label|truncate:43}
							{/if}
						</div>

						<div class="project" onclick="Todoyu.Ext.project.goToTaskInProject({$taskBookmark.id}, {$taskBookmark.id_project})">
							{htmlencode $taskBookmark.projecttitle}
						</div>
					</div>
				</span>
			</li>
		{/foreach}
		</ul>
	{else}
		<div class="notification">{Label bookmark.info.nobookmarks}</div>
	{/if}
</div>